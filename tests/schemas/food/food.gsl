{schema knd-basic

{!class Edible Object
    {is Organic Object}
    {inner nutr {c Nutritional Value} {t set}}}

{!class Dish
    {is Product of Labor}
    {inner ingredient {c Dish Ingredient} {t set}}}

{!class Dish Ingredient
   {is Information}
   {num quantity}
   {ref product {c Edible Object} {impl}}}

{!class Nutritional Value
    [!_gloss {ru {t пищевая ценность}}]
    {is Information}
    {ref source {c Authoritative Source} {impl}}
    {num energy}
    {float carbs}
    {float fat}
    {float protein}}

{!class Authoritative Source
    {is Agent}}

{!class USDA
    {is Authoritative Source}}

{!class Fruit
    {is Edible Object}}

{!class Flour
    {is Edible Object}}

{!class Butter
    {is Edible Object}}

{!class Apple Pie
    {is Dish
       [!ingredient
           {Apple  {quantity 5}}
           {Flour  {quantity 200}}
           {Butter {quantity 100}}] }}
}