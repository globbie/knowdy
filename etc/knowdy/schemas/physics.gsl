{schema knd-basic

{!class Spatial Location
        [_gloss {ru {t пространственное положение}}]
    {is Abstraction}}

{!class 3D Spatial Location
        [_gloss {ru {t локализация физического тела в пространстве}}]
    {is Spatial Location}
    {ref origin {c 3D Spatial Location}}
    {num x}
    {num y}
    {num z}}

{!class Substance Quantity
        [_gloss {ru {t количественная характеристика вещества}}]
    {is Quantity}
    {num mass}
    {ref unitref {c Mass Measure Unit}}}

{!class Countable Quantity
    [_gloss {ru {t количественная характеристика счетных объектов}}]
    {is Quantity}
    {num count} }

{!class Physical Aggregate State
        [_gloss {ru {t агрегатное состояние вещества}}]
    {is Abstraction}}

{!class Liquid State
        [_gloss {ru {t жидкое состояние вещества}}]
    {is Physical Aggregate State}}

{!class Solid State
        [_gloss {ru {t твердое состояние вещества}}]
    {is Physical Aggregate State}}

{!class Gas State
        [_gloss {ru {t газообразное состояние вещества}}]
    {is Physical Aggregate State}}

{!class Volatile Gas State
        [_gloss {ru {t летучее газообразное состояние}}
                {en {t easily evaporated gas state}}]
    {is Gas State}}

{!class Plasma State
        [_gloss {ru {t плазменное состояние вещества}}]
    {is Physical Aggregate State}}

{!class Physical Mass Quantity
    [_gloss {ru {t масса физического тела}}]
    {is Abstraction}
    {str calc}
    {-- ref measure-proc {c Mass Measurement Procedure} --}
    {num mass {impl}}
    {num count}
    {str unit}
    {ref unitref {c Mass Measure Unit}}}

{-- {proc Compute Physical Mass
    [_gloss {ru {t расчет физической массы объекта}}]
    {result {c Substance Quantity}}
    [arg  {obj  {c Physical Matter}}
          {q    {c Quantity}}]
    {switch q
            {base Substance Quantity
                  {q{mass}} }
            {base Countable Quantity
                  {run _mult
                      {quant {obj{mass}}}
                      {times {q{count}}}} }} }
--}

{!class Mass Measure Unit
    [_gloss {ru {t единица измерения массы}}]
    {is Abstraction}}

{!class Gram
    [_gloss {ru {t грамм}}]
    {is Mass Measure Unit}}

{!class Liter
    [_gloss {ru {t литр}}]
    {is Mass Measure Unit}}


}